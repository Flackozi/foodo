            <Font name="Arial Bold Italic" size="12.0" />
         </font></TextField>
      <TextField fx:id="quantiyTextField" layoutX="11.0" layoutY="252.0" prefHeight="30.0" prefWidth="158.0" promptText="Quantity">
         <font>
            <Font name="Arial Bold Italic" size="12.0" />
         </font></TextField>
      <TextArea fx:id="descriptionTextArea" layoutX="20.0" layoutY="575.0" prefHeight="111.0" prefWidth="355.0" />
